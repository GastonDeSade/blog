---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import type { GetStaticPaths, Page } from 'astro';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';
import type { CollectionEntry } from 'astro:content';

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
	const isProd = process.env.NODE_ENV === 'production';
	
	let allPosts;
	if(isProd) {
		allPosts = (await getCollection('blog'))
			.filter(post => post.data.isPublished && post.data.pubDate <= new Date())
			.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
	} else {
		allPosts = (await getCollection('blog'))
			.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
	}
	
	return paginate(allPosts, { pageSize: 10 });
};

type Props = {
	page: Page<CollectionEntry<'blog'>>;
};

const { page } = Astro.props;
const isProd = process.env.NODE_ENV === 'production';

const postStatus = (post: CollectionEntry<'blog'>) => {
	return {
		status: post.data.isPublished && post.data.pubDate.valueOf() < Date.now() ? 'Publié' : 
		(post.data.isPublished && post.data.pubDate.valueOf() > Date.now() ? 'À venir' : 'Brouillon')
	};
};

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 960px;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: calc(50% - 1rem);
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li:first-child {
				width: 100%;
				margin-bottom: 1rem;
				text-align: center;
			}
			ul li:first-child img {
				width: 100%;
			}
			ul li:first-child .title {
				font-size: 2.369rem;
			}
			ul li img {
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				ul {
					gap: 0.5em;
				}
				ul li {
					width: 100%;
					text-align: center;
				}
				ul li:first-child {
					margin-bottom: 0;
				}
				ul li:first-child .title {
					font-size: 1.563em;
				}
			}
			/* Ajoutez ces styles */
			.post-published {
				border: 2px solid green;
				border-radius: 12px;
				padding: 10px;
			}
			.post-upcoming {
				border: 2px solid orange;
				border-radius: 12px;
				padding: 10px;
			}
			.post-draft {
				border: 2px solid red;
				border-radius: 12px;
				padding: 10px;
			}
			/* Pagination styles */
			.pagination {
				display: flex;
				justify-content: center;
				gap: 1rem;
				margin-top: 3rem;
				align-items: center;
			}
			.pagination a,
			.pagination span {
				padding: 0.5rem 1rem;
				border-radius: 6px;
				text-decoration: none;
				transition: 0.2s ease;
			}
			.pagination a {
				background-color: rgb(var(--accent));
				color: white;
			}
			.pagination a:hover {
				background-color: rgb(var(--accent-dark));
			}
			.pagination a.disabled {
				background-color: rgb(var(--gray-light));
				color: rgb(var(--gray));
				pointer-events: none;
			}
			.pagination .current-page {
				color: rgb(var(--black));
				font-weight: bold;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						page.data.map((post) => (
							<li>
								<a href={isProd ? `/blog/blog/${post.id}/` : `/blog/${post.id}/`}
								   class={!isProd ? (postStatus(post).status === 'Publié' ? 'post-published' : (postStatus(post).status === 'À venir' ? 'post-upcoming' : 'post-draft')) : ''}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
			
			{/* Pagination controls */}
			<nav class="pagination">
				{page.url.prev ? (
					<a href={page.url.prev}>← Précédent</a>
				) : (
					<a class="disabled">← Précédent</a>
				)}
				
				<span class="current-page">
					Page {page.currentPage} sur {page.lastPage}
				</span>
				
				{page.url.next ? (
					<a href={page.url.next}>Suivant →</a>
				) : (
					<a class="disabled">Suivant →</a>
				)}
			</nav>
		</main>
		<Footer />
	</body>
</html>
